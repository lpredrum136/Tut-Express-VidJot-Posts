<div class="card card-body">
  <h3>Chỉnh sửa bài viết</h3>
  <form action="/posts/{{post._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Tiêu đề</label>
      <input type="text" class="form-control" name="title" value="{{post.title}}" required>
      <!--You can add "required" for client side validation-->
    </div>
    <div class="form-group">
      <label for="text">Nội dung</label>
      <textarea name="text" class="form-control" required>{{post.text}}</textarea>
      <!--You can add "required" for client side validation-->
    </div>
    <button type="submit" class="btn btn-primary">Chấp nhận thay đổi</button>
  </form>
</div>